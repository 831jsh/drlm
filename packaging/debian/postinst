#!/bin/sh
set -e

case "$1" in
    configure)
	[ -f /var/lib/drlm/client.data.save ] && mv /var/lib/drlm/client.data.save /var/lib/drlm/client.data
	[ -f /var/lib/drlm/backup.data.save ] && mv /var/lib/drlm/backup.data.save /var/lib/drlm/backup.data
	[ -f /var/lib/drlm/network.data.save ] && mv /var/lib/drlm/network.data.save /var/lib/drlm/network.data
	#[ -f /var/lib/drlm/calendar.data.save ] && mv /var/lib/drlm/calendar.data.save /var/lib/drlm/calendar.data
	[ -e /var/lib/drlm/.ids/.idcount.client.save ] && mv /var/lib/drlm/.ids/.idcount.client.save /var/lib/drlm/.ids/.idcount.client
	[ -e /var/lib/drlm/.ids/.idcount.network.save ] && mv /var/lib/drlm/.ids/.idcount.network.save /var/lib/drlm/.ids/.idcount.network
	service drlm-stord start
	;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 0
        ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
