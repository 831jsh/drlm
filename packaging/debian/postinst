#!/bin/sh
set -e

case "$1" in
    configure)
	[ -f /var/lib/drls/client.data.save ] && mv /var/lib/drls/client.data.save /var/lib/drls/client.data
	[ -f /var/lib/drls/backup.data.save ] && mv /var/lib/drls/backup.data.save /var/lib/drls/backup.data
	[ -f /var/lib/drls/network.data.save ] && mv /var/lib/drls/network.data.save /var/lib/drls/network.data
	[ -f /var/lib/drls/calendar.data.save ] && mv /var/lib/drls/calendar.data.save /var/lib/drls/calendar.data
	[ -e var/lib/drls/.ids.save ] && mv /var/lib/drls/.ids.save /var/lib/drls/.ids
	service drls-stord start
	;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 0
        ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
